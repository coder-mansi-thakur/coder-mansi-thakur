{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/containers/*": [
        "containers/*"
      ],
      "@/components": [
        "components"
      ],
      "@/constants":[
        "constants"
      ],
      "@/helpers": [
        "helpers/"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/lib/hooks":[
        "lib/hooks"
      ],
      "@/helpers/mailer":[
        "helpers/mailer"
      ],
      "@/layout": [
        "layout"
      ],
      "@/models/userModel":[
        "models/userModel"
      ],
      "@/mailConfig/mailConfig":[
        "mailConfig/mailConfig"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
